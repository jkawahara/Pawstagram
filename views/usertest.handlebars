<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Testing Page!</h2>

        <h3>Users:</h3>
          <ul id="user-list" class="list-group">
            {{#each users}}
            <li data-id="{{this.id}}" class="list-group-item">
              <a href="user/{{this.id}}">{{this.name}}</a>
              <button class="btn btn-danger float-right delete">ï½˜</button>
            </li>
            {{/each}}
          </ul>

        <form class="new-user" action="POST">
          <div class="form-group">
            <label for="user-url">user-photo-url</label>
            <input type="text" id="user-photo-url" class="form-control" aria-describedby="user-photo-url" placeholder="user-photo-url">
          </div>
          <div class="form-group">
            <label for="user-name">user-name</label>
            <input type="text" id="user-name" class="form-control" aria-describedby="user-name" placeholder="user-name">
          </div>
          <div class="form-group">
            <label for="user-email">user-email</label>
            <input type="text" id="user-email" class="form-control" aria-describedby="user-email" placeholder="user-email">
          </div>
          <div class="form-group">
            <label for="user-password">user-password</label>
            <input type="text" id="user-password" class="form-control" aria-describedby="user-password" placeholder="user-password">
          </div>
          <div class="form-group">
            <label for="user-location">user-location</label>
            <input type="text" id="user-location" class="form-control" aria-describedby="user-location" placeholder="user-location">
          </div>
          <div class="form-group">
            <label for="user-location">user-bio</label>
            <input type="text" id="user-bio" class="form-control" aria-describedby="user-bio" placeholder="user-bio">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/assets/js/users.js"></script>
