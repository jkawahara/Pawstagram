<div class="container">
  <div class="main main-raised top-margin bottom-margin">
    <div class="row">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-3 mt-3 mr-3 ml-3 mb-3 text-center">
            <img class="mb-3 rounded-circle border border-purple" src="{{pets.profPic}}" style="width: 100%; border-width:4px !important;">
            <a href="#pablo" class="btn btn-primary mr-2 ml-2"><i class="fa fa-envelope"></i></a>
            <a href="#pablo" class="btn btn-primary mr-2 ml-2"><i class="fa fa-address-card"></i></a>
            <a href="#pablo" class="btn btn-primary mr-2 ml-2"><i class="fas fa-user-plus"></i></a>
          </div>
          <div class="col-lg-6 mt-3 mr-3 ml-3 mb-3">
            <h2>{{pets.name}} <small class="ml-2"><small>{{pets.breed}}</small></small></h2>
            <h3 class="remove-mt"><small>{{pets.age}} years old</small></h3>
            <p> {{pets.bio}}</p>
            <p> Owned by <a href="../../user/{{pets.User.id}}">{{pets.User.name}}</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="main main-raised mb-5">
    <div class="row mx-auto">
      <div class="col-lg-12">
        <div class="row">
          <div class="col-lg-12">
            <h2 class="card-title font-lato text-uppercase ml-3">My Photos</h2>
          </div>

          <div class="row">
            <div class="col-lg-11 mx-auto">
              <div id="photos-container">
                {{#each pets.PetPhotos}}
                {{> petPhotos/petPhoto-block}}
                {{/each}}
              </div>
              {{!-- <div class="fix-to-bottom">
                <a href="#pablo" class="btn btn-primary btn-link btn-wd btn-lg">see all...</a>
              </div> --}}
            </div>
          </div>
          <div class="row mx-auto">
            <h3 class="text-center mx-auto">Enter a URL below to add a photo for this pet:</h3>
            <div class="col-lg-11 mx-auto mb-3">
              <form class="new-pet" style="width: 100%;" action="POST">
                <div class="form-group">
                  <label for="pet-photo-url" class="bmd-label-floating">Pet Photo URL:</label>
                  <input type="text" id="pet-photo-url" class="form-control" aria-describedby="pet-photo-url" placeholder="">
                </div>
                <button id="submit" class="btn btn-primary float-right">Submit</button>
              </form>
              <a href="/user"><button id="cancel" href="/user" style="margin-top: -0px;" class="btn btn-dark float-left">Cancel</button></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/assets/js/petphotos.js"></script>